{
	"version": "0.2.0",
	"configurations": [
		{
			"name": "Run C/C++",
			"request": "launch",
			"type": "cppvsdbg",
			"program": "${fileDirname}/${fileBasenameNoExtension}.exe",
			"args": [],
			"stopAtEntry": false,
			"cwd": "${workspaceFolder}",
			"console": "externalTerminal",
			"preLaunchTask": "C/C++: gcc.exe build active file",
			"postDebugTask": "waitForUserInput"
		},
		{
			"name": ".NET Core Launch (console)",
			"type": "coreclr",
			"request": "launch",
			"preLaunchTask": "build",
			"program": "${fileDirname}/bin/Debug/net9.0/${fileDirnameBasename}.dll",
			"args": ["/k", "dotnet run --project"],
			"cwd": "${workspaceFolder}",
			"console": "externalTerminal",
			"stopAtEntry": false
		}
	]
}
